{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Cemu",
            "type": "node-terminal",
            "request": "launch",
            "preLaunchTask": "Build project",
            "cwd": "${workspaceFolder}/build",
            "envFile": "${workspaceFolder}/.env",
            "command": "$CEMU_DIR/Cemu.exe -g $(basename ${workspaceFolder}).rpx"
        },
        {
            "name": "Upload to console",
            "type": "node-terminal",
            "request": "launch",
            "preLaunchTask": "Build project",
            "cwd": "${workspaceFolder}/build",
            "envFile": "${workspaceFolder}/.env",
            "command": "wiiload $(basename ${workspaceFolder}).rpx"
        }
    ]
}
